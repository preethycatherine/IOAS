                                </table>
                                <ul style="margin-left:30px;font-size:large;">
                                    <li>
                                        <a class="" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false">Group Travel Insurance Form</a><br>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="txt-error txt-red">@Html.ValidationSummary(true)</div>
            </div>
        </div>
