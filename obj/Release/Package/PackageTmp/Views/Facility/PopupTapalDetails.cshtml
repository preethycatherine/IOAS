@model IOAS.Models.TapalDetailsModel
<div class="row-fluid">
    <div id="notify_modal" class="modal fade" daria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close closepopup" data-dismiss="modal">
                        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="edit-profile">
                        Tapal Details
                    </h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="ls-dts">
                                    <p>
                                        <span>Tapal From</span>
                                        <b>@Html.DisplayFor(m => m.FromUser)</b>
                                    </p>
                                </div>
                                <div class="ls-dts">
                                    <p>
                                        <span>Receipt Date</span>
                                        <b>@Html.DisplayFor(m => m.ReceiptDate)</b>
                                    </p>
                                </div>
                                @if (Model.ProjectTabal)
                                {
                                <div class="ls-dts">
                                    <p>
                                        <span>Project Number</span>
                                        <b>@Html.DisplayFor(m => m.ProjectNumber)</b>
                                    </p>
                                </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="ls-dts">
                                    <p>
                                        <span>Tapal Catagory</span>
                                        <b>@Html.DisplayFor(m => m.TapalType)</b>
                                    </p>
                                </div>
                                <div class="ls-dts">
                                    <p>
                                        <span>Sender Detail</span>
                                        <b>@Html.DisplayFor(m => m.SenderDetails)</b>
                                    </p>
                                </div>
                                @if (Model.ProjectTabal)
                                {
                                <div class="ls-dts">
                                    <p>
                                        <span>PI Name</span>
                                        <b>@Html.DisplayFor(m => m.PIName)</b>
                                    </p>
                                </div>
                                }
                            </div>
                            <div class="col-md-12">
                                <div class="ls-dts">
                                    <p>
                                        <span>Remarks</span>
                                        <b>@Html.Raw(Model.Remarks)</b>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="ls-dts">
                                    <span>Documents Uploaded</span>
                                    @if (Model.DocDetail.Count > 0)
                                    {
                                    foreach (var item in Model.DocDetail)
                                    {
                                    <p class="mt-sm">


                                        <a href="@Url.Action("ShowDocument","Facility",new {TapalDocId=item.TapalDocDetailId, TapalId=item.TabalId })" target="_blank"> @item.FileName</a>
                                    </p>
                                    }
                                    }


                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default closepopup" data-dismiss="modal">
                        Close
                    </button>

                </div>
            </div>
        </div>
    </div>
</div>